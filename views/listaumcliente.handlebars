<div id="client-page">
    <div class="container">
        <h1>{{cliente.nome}}</h1>
        <p>Sexo: {{cliente.sexo}}</p>
        <p>Data de Nascimento: {{cliente.nascimento}}</p>
        <p>CEP: {{cliente.cep}}</p>
        <p>Telefone: {{cliente.telefone}}</p>
        <p>Email: {{cliente.email}}</p>
        <div class="actions">
            <button type="submit"><a href="/cliente/editar/{{cliente.id}}">Editar</a></button>           
            <form action="/cliente/remover/{{cliente.id}}" method="post">
                <input type="submit" value="Remover">
            </form>
        </div>
    </div>
</div>